<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/brushbox">

        <ImageButton
            android:id="@+id/smallBrush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brush1"
            android:layout_marginEnd="20dp"/>

        <ImageButton
            android:id="@+id/mediumBrush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brush2"
            android:layout_marginEnd="20dp"/>

        <ImageButton
            android:id="@+id/largeBrush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brush3"
            android:layout_marginEnd="70dp"/>

        <ImageButton
            android:id="@+id/maskcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/check"/>
    </LinearLayout>
</LinearLayout>
